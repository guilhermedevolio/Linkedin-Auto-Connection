{
  "manifest_version": 3,
  "name": "LinkedIn Auto Connect Pro",
  "version": "1.0.0",
  "description": "Automatize conex√µes no LinkedIn com mensagens personalizadas e controle total",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
